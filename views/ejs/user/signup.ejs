<form action="/user" method="post"  class="anime_login">
  <label class="anime_login_input" for="">First Name</label>
  <input class="anime_login_input anime_login_text" type="text" name="fname" id="" placeholder="First Name">
  <label class="anime_login_input" for="">Last Name</label>
  <input class="anime_login_input anime_login_text" type="text" name="lname" id="" placeholder="Last Name">
